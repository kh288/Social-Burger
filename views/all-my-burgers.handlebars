<h2 class="welcome">Welcome {{user.username}}! </h2>
<div class="container">
  {{#if burgers.length}}
    <div class="row">
        {{#each burgers as |burger|}}
        <div class="card col-sm-3 burgerCardContainer myburgerCard">
        <div class="card-header">
            <h2><a  class="homepageBurger" href="/burger/{{burger.id}}">{{title}}</a></h2>
            </div> 
            
              <div class="col-md-4">
                  <img src="assets/logo.png" class="img-fluid rounded-start" alt="...">
              </div>
              
                    <div class="card-footer">
                        <p class="card-text textBurger">by <span class="author">{{user.username}}</span> on: {{format_date date_created}} </p>
                    </div>
                    <div class="card-footer">
                      <a href="/dashboard/edit/{{id}}">
                          <button type="button" class="btn btn-danger btn-sm deleteBtn">DELETE</button>
                      </a>
                    </div>

                    {{!-- {{#each burger.ingredients}}
                    <li>{{this}}</li>
                    {{/each}} --}}
                
        </div>
        {{/each}}
    </div> 
    {{/if}}
</div>


