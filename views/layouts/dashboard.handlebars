    <link rel="stylesheet" href="/css/burger-builder.css">
    <title>Social Burger</title>
</head>


<body>

    <nav class="navbar navbar-expand-md">
        <div class="container-fluid">
            <a class="text-light navbar-brand" href="#"><img src="/assets/logo.png" alt="Burger-bulder-logo" width="280"height="150"></a>
            <button class="text-light navbar-dark navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link navbartext" aria-current="page" href="/">World</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active navbartext" aria-current="page" href="/">Create</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navbartext" href="/dashboard">MyBurgers</a>
                    </li>
                    <li class="nav-item">
                    <li><a class="nav-link navbartext" id="logoutBtn" href="#">Logout</a></li> 
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<main>
    {{body}}
</main>
<div class="container">
    <div class="row p-3">
    <!-- CARD -->
    <form id="submit-burger" class="form-label input-group mb-3">
            <div class="card col-md-6 burger-card">
                <h5 class="card-title text-center p-3">Ingredients</h5>
                <div id="ingredients" class="row p-3">
                
                </div>
            </div>

            <div class="card col-md-6 burger-card">
                <h5 class="card-title text-center p-3">Burger</h5>
                
                <div class="container justify-content-center">
                    <div id="burger-gen" style="margin-top: 100%;" class="row burger-stack">
                        
                    </div>
                </div>
            
            </div>
            
            <div class="card burger-card">
                <h5 class="card-title text-center p-3">Results</h5>
                
                    <input id="burger-title" type="text" class="form-control" placeholder="Burger Title" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Button</button>
                    </div>
        </form>

        </div>
    </div>
    
    </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
