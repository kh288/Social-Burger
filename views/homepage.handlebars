<div class="container">
    <div class="row">
        {{#each burgers as |burger|}}
        <div class="card col-sm-3 burgerCardContainer">
        <!-- BURGER -->

        <div class="card-header">
            <h6><a  class="homepageBurger" href="/burger/{{burger.id}}">{{burger.title}}</a></h6>
            </div>    
            <div class="container" data-aos="fade-up">
                <div style="margin-top: 100%;" class="row burger-stack">

                    <section id="burger-generate-{{burger.id}}" class="burger-render">
                        <article class="text-white">
                            <p class="delete-me">
                                {{burger.ingredients}}
                            </p>
                        </article>
                    </section>

                    <div class="card-footer">
                        <p class="card-text textBurger">by <span class="author">{{user.username}}</span> on: {{format_date date_created}} </p>
                    </div>
                    {{#each burger.ingredients}}
                    <li>{{this}}</li>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div> 
    <script src="/js/burger-render.js"></script>
</div>


